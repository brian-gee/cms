---
import Layout from "../../layouts/Layout.astro";
import { supabase } from "../../lib/supabase";
import { OrdersTable, type orderEntry } from "../../components/OrdersTable";

const { data } = (await supabase.from("orders").select("*")) as {
  data: orderEntry[];
};
---

<Layout title="Orders">
  <OrdersTable orders={data} client:idle />
</Layout>
