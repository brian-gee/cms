---
import Layout from "../../layouts/Layout.astro";
import { supabase } from "../../lib/supabase";
import { OrdersTable, type ClientEntry } from "../../components/OrdersTable";

const { data } = (await supabase.from("clients").select("*")) as {
  data: ClientEntry[];
};
---

<Layout title="Orders">
  <OrdersTable reviews={data} client:idle />
</Layout>
