---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Client Success">
  <main
    class="grid min-h-full px-6 py-24 bg-white place-items-center sm:py-32 lg:px-8"
  >
    <div class="text-center">
      <svg viewBox="0 0 24 24" class="w-16 h-16 mx-auto my-6 text-primary">
        <path
          fill="currentColor"
          d="M12,0A12,12,0,1,0,24,12,12.014,12.014,0,0,0,12,0Zm6.927,8.2-6.845,9.289a1.011,1.011,0,0,1-1.43.188L5.764,13.769a1,1,0,1,1,1.25-1.562l4.076,3.261,6.227-8.451A1,1,0,1,1,18.927,8.2Z"
        >
        </path>
      </svg>
      <h1
        class="mt-4 text-3xl font-bold tracking-tight text-gray-900 sm:text-5xl"
      >
        The client has successfully been added
      </h1>
      <p class="mt-6 text-base leading-7 text-gray-600">
        Click the button below to go back to your clients.
      </p>
      <div class="flex items-center justify-center mt-10 gap-x-6">
        <a
          href="/crud/clients"
          class="rounded-md bg-primary px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-primary_hover"
          >Go back to your clients</a
        >
      </div>
    </div>
  </main>
</Layout>
